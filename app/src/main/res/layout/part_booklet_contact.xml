<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bk.userPhoto"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:src="@drawable/director" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bk.name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Станкевич Андрей Сергеевич"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bk.role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Директор"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bk.phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+7(999) 999 9999"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>