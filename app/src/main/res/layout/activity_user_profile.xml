<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_profile_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.ProfileFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"

                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/header_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Профиль"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/profile_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Surname:"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/profile_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City:"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/profile_parallel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parallel:"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/profile_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="House:"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/profile_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Room:"
                    android:textSize="24sp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/header"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>